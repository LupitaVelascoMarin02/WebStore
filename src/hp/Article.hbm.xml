<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" default-access="property" default-cascade="none" default-lazy="true">
    <class catalog="WebStore" dynamic-insert="false" dynamic-update="false" mutable="true" name="classes.Article" optimistic-lock="none" polymorphism="implicit" select-before-update="false" table="article">
        <id name="idArticle" type="java.lang.Integer">
            <column name="IdArticle"/>
            <generator class="identity"/>
        </id>
        <property generated="never" lazy="false" name="articleName" optimistic-lock="true" type="string" unique="false">
            <column length="50" name="ArticleName" unique="true"/>
        </property>
        <property generated="never" lazy="false" name="description" optimistic-lock="true" type="string" unique="false">
            <column length="200" name="Description"/>
        </property>
        <property generated="never" lazy="false" name="price" optimistic-lock="true" type="java.lang.Double" unique="false">
            <column name="Price" precision="22" scale="0"/>
        </property>
        <property generated="never" lazy="false" name="stock" optimistic-lock="true" type="java.lang.Integer" unique="false">
            <column name="Stock"/>
        </property>
    </class>
</hibernate-mapping>
